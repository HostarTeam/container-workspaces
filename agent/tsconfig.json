{
    "compilerOptions": {
        "target": "ES5",
        "rootDir": "src/",
        "outDir": "dist/",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "importsNotUsedAsValues": "remove",
        "removeComments": true
    },
    "include": ["./src"],
    "exclude": ["./src/**/__tests__"]
}
