{
    "compilerOptions": {
        "target": "ES2021",
        "rootDir": "src/",
        "outDir": "dist/",
        "importHelpers": false,
        "moduleResolution": "node",
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "importsNotUsedAsValues": "remove",
        "removeComments": true
    },
    "include": ["./src"],
    "exclude": ["./src/**/__tests__"]
}
